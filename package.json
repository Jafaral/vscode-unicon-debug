{
  "name": "unicon-debugger",
  "displayName": "Unicon Debugger",
  "description": "Debugger extension for Unicon",
  "author": "Unicon LSP Team",
	"license": "MIT",
	"version": "0.4.0",
	"publisher": "jafar",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Debuggers"
  ],
	"repository": {
		"type": "git",
		"url": "https://github.com/Jafaral/vscode-unicon-debug.git"
	},
  "activationEvents": [
    "onDebug",
    "onDebugDynamicConfigurations:unicon-debugger"
  ],
  "keywords" : [
		"Unicon",
		"Icon",
		"SNOBOL"
	],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "breakpoints": [
      {
        "language": "unicon"
      }
    ],
    "languages": [
      {
        "id": "unicon",
        "extensions": [
          ".icn"
        ]
      }
    ],
    "debuggers": [
      {
        "type": "unicon-debugger",
        "label": "Unicon Debugger",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a program file.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "args": {
                "type": "string",
                "description": "Args for program file.",
                "default": ""
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "unicon-debugger",
            "request": "launch",
            "name": "Launch in Unicon",
            "program": "${file}",
            "stopOnEntry": true
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Unicon Debugger",
      "properties": {
        "unicon-debugger.uniconPath": {
          "type": "string",
          "default": ""
        },
        "unicon-debugger.maxAttempts": {
          "type": "number",
          "default": 25
        },
        "unicon-debugger.args": {
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "kill-port": "^2.0.1",
    "vscode-debugadapter": "^1.41.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
